<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>

    <style type="text/css">
    <!--
    .tab { margin-left: 40px; }
    -->
    </style>

  </head>
  <body>

    <h2><%= @user.username %></h2>

    <h3>Films</h3>

    <ul>
      <li>Writer</li>
      <% @user.writer.films.each do |film| %>
          <li class="tab"><a href="/films/<%= film.id %>" style="text-decoration:none"><%= film.title.capitalize %></a></li>
      <% end %>
    </ul>

    <ul>
      <li>Director</li>
      <% @user.director.films.each do |film| %>
        <li class="tab"><a href="/film/<%= film.id %>" style="text-decoration:none"><%= film.title.capitalize %></a></li>
      <% end %>
    </ul>

  </body>
</html>
