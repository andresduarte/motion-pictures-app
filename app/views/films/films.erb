<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>

    <style type="text/css">
    <!--
    .tab { margin-left: 40px; }
    -->
    </style>

    <style type="text/css">
    <!--
    .tab2 { margin-left: 80px; }
    -->
    </style>

  </head>
  <body>

    <h2> Films </h2>

      <% @films.each do |film| %>

      <ul>

        <li><h3><%= film.title.capitalize %></h3></li>
        <li class="tab"><h4>genre: <%= film.genre %></h4></li>
        <li class="tab"><h4>runtime: <%= film.runtime + " min"%></h4></li>

      </ul>

      <% end %>

      <% if logged_in? %>

        <a href="/films/new">New Film</a><br>

      <% end %>

  </body>
</html>
