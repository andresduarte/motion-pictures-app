

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>

    <style type="text/css">
    <!--
    .together {
    display: block;
    float: left;
    height: 0%;
    margin: 0px 5px 0px 0px;
    }
    -->
    </style>

  </head>
  <body>

    <h2>Edit Film</h2>

    <form action="/films/<%= @film.id %>" method="post">
      <input type="hidden" id="hidden" name="_method" value="PATCH">
      <input type="text" name="film[title]" placeholder="title"  value="<% @film.title %>"><br>
      <input type="text" name="film[genre]" placeholder="genre" value="<% @film.genre %>"><br>
      <input type="text" name="film[runtime]" placeholder="runtime" value="<% @film.runtime %>"><br>
      <% User.all.each do |user| %>
        <% Writer.all.each do |writer| %>
          <% Director.all.each do |director| %>

            <h4 class="together "><%= user.username %></h4>
            <h4 class="together "><input type="checkbox" name="film[writer_ids][]"  id="writer_<%= writer.id %>" value="<%= writer.id %>" <%='checked' if @film.writers.any? {|w| w.id == writer.id} %>> writer</h4>
            <h4 class="together "><input type="checkbox" name="film[director_ids][]"  id="director_<%= director.id %>" value="<%= director.id %>" <%='checked' if @film.directors.any? {|d| d.id == director.id} %>> director</h4>

          <% end %>
        <% end %>
      <% end %>

      <br><br>
      <input type="submit" value="Edit Film">

    </form>

    <% if logged_in? %>
      <br>
      <a href="/films/new">New Film</a><br>
      <a href="/films">Films</a><br>

    <% end %>

  </body>
</html>
